{
  "name": "setup-ionic",
  "version": "2.0.1",
  "private": true,
  "description": "Set up iOS and Android environment for Capacitor or Cordova projects.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --noEmit",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "bash scripts/pack.sh",
    "test": "jest",
    "test:src": "jest --coverage --collectCoverageFrom=\"src/**/*.ts\"",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --runInBand",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm run test:ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coturiv/setup-ionic.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "ionic",
    "cordova",
    "capacitor",
    "android",
    "ios",
    "gradle",
    "cocoapods"
  ],
  "author": "coturiv",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/tool-cache": "^2.0.2",
    "@actions/cache": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@typescript-eslint/parser": "^4.8.1",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
